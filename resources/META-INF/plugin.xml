<idea-plugin url="https://github.com/MrDenua/WiFiADB">

  <id>com.dengzii.plugin.adb</id>
  <name>Android WiFiADB</name>

  <version>1.0</version>
  <vendor email="denua@foxmail.com" url="https://dengzii.com">dengzi</vendor>
  <description><![CDATA[
      <h3><b>An plugin use for connect android device by WiFi.</b><h3><br>
      <b>GitHub : <a href="https://github.com/MrDenua/WiFiADB">WiFiADB</a></b><br><br>
      <b>Usage: </b> <br> <br>
      <b>Please ensure your complete has install adb shell. Reference here ->
      <a href="https://developer.android.google.cn/studio/command-line/adb#top_of_page">Android Debug Bridge</a></b>
      <br><br>
      connect your Android device to compute by usb,
       click Refresh button, you will see your device in table.
        <b>If you does not find your devices, please see log from MenuBar Tools > Log, </b> <br>
       <br>
      <b>Screenshot</b>
      <img src="https://raw.githubusercontent.com/MrDenua/WiFiADB/master/screen_shot/adb_wifi.png">
    ]]></description>

  <change-notes><![CDATA[
      An plugin use for connect android device by WiFi.<br>
    ]]>
  </change-notes>

  <idea-version since-build="183.4284.148"/>

  <depends>com.intellij.modules.java</depends>
  <depends>com.intellij.modules.all</depends>
  <depends>org.jetbrains.kotlin</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="com.dengzii.plugin.adb.MainAction" class="com.dengzii.plugin.adb.MainAction" text="WiFiAdb"
            description="Connect android device by wifi">
      <add-to-group group-id="ToolbarFindGroup" anchor="first"/>
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt 2"/>
    </action>
  </actions>

</idea-plugin>